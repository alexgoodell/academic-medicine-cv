    author = {Johnson, A. B. and \textbf{Smith, J. E.} and Williams, C. D. and Davis, E. F. and Wilson, F. G.},
    year = {2016},
    month = oct,
    journal = {Circulation},
    volume = {134},
    number = {16},
    pages = {1225--1236},
    abstract = {BACKGROUND: Heart failure with preserved ejection fraction (HFpEF) is a growing epidemic with poor outcomes. This study sought to identify predictors of major adverse cardiovascular events (MACE) in patients with HFpEF. METHODS: We conducted a prospective cohort study of 1000 patients with HFpEF. RESULTS: Over a median follow-up of 3.5 years, 300 patients experienced MACE. Independent predictors of MACE included age, New York Heart Association class, diabetes mellitus, and left atrial volume index. CONCLUSIONS: These findings may help in risk stratification and management of patients with HFpEF.},
    langid = {english},
    keywords = {published article},
    url = {http://dx.doi.org/10.1161/CIRCULATIONAHA.116.022362},
}

